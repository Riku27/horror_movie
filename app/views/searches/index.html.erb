<div class="container">
  <div class="row py-4">
    <div clsss="offset-1">
      <h1><i class="fas fa-search"></i>検索結果</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">

      <table class="table table-hover table-inverse">
        <% @range == "Movie" %>
        <tr>
          <th>タイトル</th>
          <th>監督</th>
          <th>面白さ</th>
          <th>怖さ</th>
          <th>投稿ユーザー</th>
          <th>投稿日</th>
          <th>コメント数</th>
        </tr>
        <tbody>
          <% @movies.each do |movie| %>
          <tr>
            <td><%= link_to movie.title, public_movie_path(movie.id) %></td>
            <td><%= movie.director %></td>
            <td><%= movie.rate %></td>
            <td><%= movie.rate_horror %></td>
            <td><%= image_tag movie.user.get_profile_image, size:"40x40" %>
            <%= movie.user.name %></td>
            <td><%= movie.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= movie.comments.count %>コメント</td>
          </tr>
          <% end %>
        </tbody>
      </table>
        <div class="d-flex justify-content-center"><%= paginate @movies %></div>
    </div>
  </div>
</div>