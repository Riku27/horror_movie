<div class="container">
  <div class="row py-4">
    <div clsss="offset-1">
      <h1 class="bg-light text-dark">Genre Horror</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <th><i class="fas fa-star-of-david"></i><strong>ホラージャンル一覧</strong><i class="fas fa-star-of-david"></i></th>
        <table class="table table-hover table-inverse">
          <tr>
            <th><i class="fas fa-star-and-crescent"></i>ジャンル名</th>
            <th><i class="fas fa-khanda"></i>投稿映画本数</th>
          </tr>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, public_movies_path(genre_id: genre.id) %></td>
            <td><%= genre.movie.count %>タイトル</td>
          </tr>
        <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>




